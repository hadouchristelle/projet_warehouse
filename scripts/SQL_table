/* create the table  and define the data type for each column*/

 USE DataWarehouse;

IF OBJECT_ID ('bronze.crm_customer', 'u')  IS NOT NULL
	DROP TABLE bronze.crm_customer;

CREATE TABLE bronze.crm_customer(
cst_id INT,
cst_key NVARCHAR(50),
cst_firstname NVARCHAR(50),
cst_lastname NVARCHAR(50),
cst_material_status NVARCHAR(50),
cst_gndr NVARCHAR(50),
cst_create_date DATE
);



IF OBJECT_ID ('bronze.crm_prodoc', 'u')  IS NOT NULL
	DROP TABLE bronze.crm_prodoc ;

CREATE TABLE bronze.crm_prodoc(
prd_id INT,
prd_key NVARCHAR(50),
prd_nm NVARCHAR(50),
prd_cost INT,
prd_line NVARCHAR(50),
prd_start_dt DATETIME,
prd_end_dt DATETIME
);


IF OBJECT_ID ('bronze.crm_sales', 'u')  IS NOT NULL
	DROP TABLE bronze.crm_sales;

CREATE TABLE bronze.crm_sales(
sls_ord_num INT,
sls_prd_key NVARCHAR(50),
sls_cust_id INT,
sls_order_dt INT,
sls_ship_dt INT,
sls_due_dt INT,
sls_sales INT,
sls_quantity INT,
sla_price INT,
);


IF OBJECT_ID ('bronze.epr_loc', 'u')  IS NOT NULL
	DROP TABLE bronze.epr_loc;

CREATE TABLE bronze.epr_loc(
cid NVARCHAR(50),
cntry NVARCHAR(50)
 );

 
IF OBJECT_ID ('bronze.epr_cust', 'u')  IS NOT NULL
	DROP TABLE bronze.epr_cust;

 CREATE TABLE bronze.epr_cust(
cid NVARCHAR(50),
bdate DATE,
gen NVARCHAR(50)
);


IF OBJECT_ID ('bronze.epr_px', 'u')  IS NOT NULL
	DROP TABLE bronze.epr_px;

CREATE TABLE bronze.epr_px(
id NVARCHAR(50),
cat NVARCHAR(50),
subcat NVARCHAR(50 ),
maintenance NVARCHAR(50)
);

